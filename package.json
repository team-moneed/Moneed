{
    "name": "moneed-workspace",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:proxy\"",
        "dev:web": "npm run dev --workspace=apps/web",
        "dev:proxy": "npm run dev --workspace=apps/proxy-server",
        "build": "npm run build --workspaces",
        "build:web": "npm run build --workspace=apps/web",
        "build:proxy": "npm run build --workspace=apps/proxy-server",
        "start": "npm run start --workspaces",
        "lint": "npm run lint --workspaces",
        "lint:fix": "npm run lint:fix --workspaces",
        "type-check": "npm run type-check --workspaces",
        "prepare": "husky install",
        "postinstall": "husky install && npm run prismaGenerate",
        "prismaGenerate": "prisma generate"
    },
    "prisma": {
        "seed": "tsx prisma/post.seed.ts"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": []
    },
    "devDependencies": {
        "@types/node": "^22.15.21",
        "concurrently": "^8.2.2",
        "husky": "^8.0.0",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "prisma": "^6.8.2",
        "tsx": "^4.20.3",
        "typescript": "~5.6.2"
    },
    "dependencies": {
        "@prisma/client": "^6.8.2"
    }
}
