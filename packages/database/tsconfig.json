{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@moneed/db/*": ["*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
